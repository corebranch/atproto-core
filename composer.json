{
  "name": "corebranch/atproto-core",
  "description": "Core component of ATProto SDK",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "ATProto\\Core\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests",
    "test-unit": "vendor/bin/phpunit tests/Unit",
    "test-feature": "vendor/bin/phpunit tests/Feature",
    "analyse": "vendor/bin/phpstan analyse ./src ./tests --error-format=github"
  }
}
